########################
# PostgreSQL
########################
POSTGRES_USER=eventhorizon_usr
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=eventhorizon

########################
# Externe APIs
########################
# OpenRouter API Key
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Nano Banana Gemini API Key
NANOBANANA_GEMINI_API_KEY=your_api_key_here
# Nano Banana Model (common models: gemini-2.5-flash-image, gemini-3-pro-image-preview)
NANOBANANA_MODEL=gemini-2.5-flash-image
# Resend API Key (get at: https://resend.com/api-keys)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

########################
# E-Mail
########################
MAIL_FROM_EMAIL=event-horizon@notifications.sp23.online
MAIL_FROM_NAME=EventHorizon
FRONTEND_URL=https://event-horizon.sp23.online

########################
# Backend / App Config
########################
APP_ENV=development
BACKEND_CORS_ORIGINS=["https://event-horizon.sp23.online"]

########################
# Better Auth (Sidecar)
########################
BETTER_AUTH_SECRET=replace-with-strong-secret
BETTER_AUTH_BASE_URL=http://localhost:5173
BETTER_AUTH_BASE_PATH=/api/auth
BETTER_AUTH_JWT_ISSUER=eventhorizon-auth
BETTER_AUTH_JWT_AUDIENCE=eventhorizon-api
BETTER_AUTH_JWKS_URL=http://localhost:3000/api/auth/jwks
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:5173
BETTER_AUTH_JWKS_CACHE_SECONDS=300
BETTER_AUTH_DB_SCHEMA=auth

########################
# AWS Bucket for storage (avatars & assets)
########################
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret
AWS_DEFAULT_REGION=eu-west-1
AWS_STORAGE_BUCKET=your-bucket-name
AWS_STORAGE_BUCKET_BASE_URL=https://your-bucket-name.s3.eu-west-1.amazonaws.com
AVATAR_MAX_SIZE_MB=5
AVATAR_PROCESSED_SIZE=128
# webp empfohlen, fallback zu webp wenn avif nicht unterstuetzt
AVATAR_OUTPUT_FORMAT=webp

########################
# Sentry (Backend Error Monitoring & Tracing)
########################
# Backend Sentry DSN (get at: https://sentry.io/settings/<your-org>/projects/<your-project>/keys/)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@oxxxxxx.ingest.sentry.io/xxxxxxx
SENTRY_ENVIRONMENT=production
# Sample rate for performance monitoring (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Sample rate for profiling (0.0 to 1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1

########################
# Frontend (Vite)
########################
VITE_USE_MOCKS=false

# Sentry (Frontend Error Monitoring & Tracing)
# Frontend Sentry DSN (get at: https://sentry.io/settings/<your-org>/projects/<your-project>/keys/)
VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@oxxxxxx.ingest.sentry.io/xxxxxxx
VITE_SENTRY_ENVIRONMENT=production
# Sample rate for performance monitoring (0.0 to 1.0)
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
# App version for release tracking
VITE_APP_VERSION=1.0.0

########################
# Apify API
########################
# Apify API Token for scraping tasks
APIFY_API_TOKEN=apify_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

########################
# Openrouteservice API https://giscience.github.io/openrouteservice/api-reference/
########################
# Openrouteservice API Token for routing and distance calculations
OPENROUTESERVICE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

########################
# Scheduled scripts
########################
# Optional: YAML/JSON string with scheduled jobs (overrides file if set)
SCHEDULED_JOBS=
# Optional: path to scheduled jobs config file inside the container
SCHEDULED_JOBS_FILE=/app/scripts/scheduled_jobs.yml
